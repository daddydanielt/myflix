-@categories.each do |category|
  .row
    %article.video_category
      %header
        %h3= link_to category.title
      -category.videos.each do |video|
        .video.col-sm-2(style="padding-top:10px") 
          =# link_to image_tag("#{video.small_cover_url}"), video_path(video)
          = link_to "", nil do
            %img(src="#{video.small_cover_url}") 
