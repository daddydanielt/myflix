%section.reset_password.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag reset_passwords_path, method: "post" do
        %header
          %h1 Reset Your Password
        %fieldset.form-group
          = label_tag :new_password, "New Password"
          .row
            .col-sm-4
              = password_field_tag :new_password
          = hidden_field_tag :token, @user.token
        %fieldset.form-group.action
          %input(type="submit" value="Reset Password" class="btn btn-default")
